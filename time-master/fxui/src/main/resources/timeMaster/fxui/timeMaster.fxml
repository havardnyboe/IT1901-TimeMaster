<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="timeMaster.fxui.TimeMasterController">
   <TabPane prefHeight="400.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Stamp in">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <VBox>
                        <children>
                           <MenuButton fx:id="chooseEmployeeButton" text="Choose Employee" />
                           <DatePicker fx:id="chooseDateButton" />
                           <TextField fx:id="inputHour" promptText="Hour" />
                           <TextField fx:id="inputMinutes" promptText="Min" />
                           <Button fx:id="registerTimeButton" onAction="#handleRegisterTime" text="Check in" />
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                     <VBox>
                        <children>
                           <Button fx:id="autoRegisterTimeButton" onAction="#autoClockInOut" text="Auto Check in" />
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Check hours worked">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
         </content>
       </Tab>
         <Tab text="Add New Employee">
           <content>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <VBox>
                        <children>
                           <TextField fx:id="newEmployeeName" promptText="Name..." />
                           <Button fx:id="addNewEmployeeButton" mnemonicParsing="false" text="Add Employee" />
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                  </children>
               </AnchorPane>
           </content>
         </Tab>
     </tabs>
   </TabPane>

</HBox>
